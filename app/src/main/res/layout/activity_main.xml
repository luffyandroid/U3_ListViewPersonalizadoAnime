<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.didact.u3_listviewpersonalizadoanime.MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivImagenFinal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/d60"

            android:layout_weight="3"
            app:srcCompat="@mipmap/ic_launcher" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="left|center_vertical|center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvNombreFinal"
                style="@style/estilotexto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView" />

            <TextView
                android:id="@+id/tvSerieFinal"
                style="@style/estilotexto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView" />

            <TextView
                android:id="@+id/tvFraseFinal"
                style="@style/estilotexto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/estilotexto"
        android:text="Lista de personajes" />

    <ListView
        android:id="@+id/lvPersonajes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
